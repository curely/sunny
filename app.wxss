/**整体view样式**/
.containsView{
  padding: 15rpx 15rpx 15rpx 15rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  background-color: white;
}
/**头部样式**/
.topContainsView{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 18rpx;
}
/**头像样式**/
.profileImage{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
/**头部显示头像和时间样式**/
.topRightView{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}
/**名字样式**/
.topRightName{
  font-size: 18rpx;
}
/**时间样式**/
.topRightTime{
  font-size: 14rpx;
  color: #b8b2b2;
  margin-top: 10rpx;
}

/**底部样式**/
.bottomView{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center
}
/**每个item样式**/
.bottomItemView{
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  margin-top: 18rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
/**item样式中图标样式**/
.bottomItemImage{
  width: 45rpx;
  height: 45rpx
}
/**item中文字样式**/
.bottomItemText{
  font-size: 15rpx;
  color: #b8b2b2;
  margin-top: 8rpx;
  margin-left: 10rpx;
}

/**分割线样式**/
.divLine{
  background-color: #f3f3f3;
  width: 100%;
  height: 15rpx;
}